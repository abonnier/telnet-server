<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.akhettar.telnet</groupId>
	<artifactId>telnet-server</artifactId>
	<version>1.0</version>
	<packaging>jar</packaging>

	<name>telnet-server</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.9</version>
			<scope>test</scope>
		</dependency>


	</dependencies>

	<build>
		<finalName>telnet-server</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>

				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<!-- Allows TelneTserver to be run via 'mvn exec:java' -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.2</version>
				<configuration>
					<mainClass>com.akhettar.telnet.server.ServerLauncher</mainClass>
					<arguments>
						<argument>12667</argument>
					</arguments>
				</configuration>
			</plugin>

			<!-- Building the exectuable Jar -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>com.akhettar.telnet.server.ServerLauncher</mainClass>
							<packageName>com.akhettar.telnet.server</packageName>
							<addClasspath>true</addClasspath>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>

	</build>
        <distributionManagement>
	    <repository>
	        <id>nexus-release-repository</id>
	        <name>release-repository</name>
	        <url>${REPOSITORY_URL}</url>
	    </repository>
	</distributionManagement> 
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.5.2</version>
			</plugin>

		</plugins>
	</reporting>


</project>
